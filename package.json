{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "next dev",
    "hcm:run": "hcm 'src/**/*.module.css'",
    "hcm:watch": "pnpm hcm:run -w",
    "dev": "concurrently \"npm:serve\" \"npm:hcm:watch\" -c blue,green",
    "prebuild": "pnpm hcm:run",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "run-p -l -c --aggregate-output lint:*",
    "lint:eslint": "next lint",
    "lint:prettier": "prettier --check .",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "typecheck": "tsc",
    "ncu:dev": "ncu -u --dep dev",
    "ncu:prod": "ncu -u --dep prod"
  },
  "dependencies": {
    "next": "14.1.1",
    "next-sitemap": "4.2.3",
    "next-themes": "0.2.1",
    "open-color": "git+https://github.com/y-temp4/open-color.git",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "2.2.1"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.3",
    "@types/node": "20.11.24",
    "@types/react": "18.2.61",
    "@types/react-dom": "18.2.19",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "autoprefixer": "10.4.18",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-next": "14.1.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "12.0.0",
    "eslint-plugin-tailwindcss": "3.14.3",
    "happy-css-modules": "2.1.2",
    "npm-check-updates": "16.14.15",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.35",
    "postcss-nesting": "12.0.4",
    "prettier": "3.2.5",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.14.1+sha256.2df78e65d433d7693b9d3fbdaf431b2d96bb4f96a2ffecd51a50efe16e50a6a8"
}
