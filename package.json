{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "next dev",
    "hcm:run": "hcm 'src/**/*.module.css'",
    "hcm:watch": "pnpm hcm:run -w",
    "dev": "concurrently \"npm:serve\" \"npm:hcm:watch\" -c blue,green",
    "prebuild": "pnpm hcm:run",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "run-p -lcn lint:*",
    "lint:eslint": "next lint",
    "lint:prettier": "prettier --check .",
    "lint:typecheck": "tsc",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "ncu:dev": "ncu -u --dep dev",
    "ncu:prod": "ncu -u --dep prod"
  },
  "dependencies": {
    "next": "15.0.2",
    "next-sitemap": "4.2.3",
    "next-themes": "0.3.0",
    "nuqs": "1.17.6",
    "open-color": "git+https://github.com/y-temp4/open-color.git",
    "react": "19.0.0-rc-02c0e824-20241028",
    "react-dom": "19.0.0-rc-02c0e824-20241028",
    "tailwind-merge": "2.4.0"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.0.0",
    "@types/react": "npm:types-react@19.0.0-rc.1",
    "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1",
    "@typescript-eslint/eslint-plugin": "7.11.0",
    "@typescript-eslint/parser": "7.11.0",
    "autoprefixer": "10.4.19",
    "concurrently": "8.2.2",
    "eslint": "8.57.0",
    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "12.1.0",
    "eslint-plugin-tailwindcss": "3.17.4",
    "happy-css-modules": "3.1.1",
    "npm-check-updates": "17.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.39",
    "postcss-nesting": "12.1.5",
    "prettier": "3.3.3",
    "tailwindcss": "3.4.7",
    "typescript": "5.6.3"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "pnpm": {
    "overrides": {
      "@types/react": "npm:types-react@19.0.0-rc.1",
      "@types/react-dom": "npm:types-react-dom@19.0.0-rc.1"
    }
  }
}
