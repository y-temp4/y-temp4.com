{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "next dev --turbo",
    "hcm:run": "hcm 'src/**/*.module.css'",
    "hcm:watch": "pnpm hcm:run -w",
    "dev": "concurrently \"npm:serve\" \"npm:hcm:watch\" -c blue,green",
    "prebuild": "pnpm hcm:run",
    "build": "next build --turbo",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "run-p -lcn lint:*",
    "lint:eslint": "next lint",
    "lint:prettier": "prettier --check .",
    "lint:typecheck": "tsc",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "ncu:dev": "ncu -u --dep dev",
    "ncu:prod": "ncu -u --dep prod"
  },
  "dependencies": {
    "next": "15.5.2",
    "next-sitemap": "4.2.3",
    "next-themes": "0.4.4",
    "nuqs": "2.1.1",
    "open-color": "git+https://github.com/y-temp4/open-color.git",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwind-merge": "2.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.8.6",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "autoprefixer": "10.4.20",
    "concurrently": "9.0.1",
    "eslint": "9.14.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tailwindcss": "3.17.5",
    "happy-css-modules": "3.1.1",
    "npm-check-updates": "17.1.9",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.47",
    "postcss-nesting": "13.0.1",
    "prettier": "3.4.2",
    "tailwindcss": "3.4.14",
    "typescript": "5.8.3",
    "typescript-eslint": "8.22.0"
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b",
  "pnpm": {
    "overrides": {
      "@types/react": "19.1.12",
      "@types/react-dom": "19.1.9"
    },
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
