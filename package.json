{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "next dev",
    "hcm:run": "hcm 'src/**/*.module.css'",
    "hcm:watch": "pnpm hcm:run -w",
    "dev": "concurrently \"npm:serve\" \"npm:hcm:watch\" -c blue,green",
    "prebuild": "pnpm hcm:run",
    "build": "next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "run-p -lcn lint:*",
    "lint:eslint": "next lint",
    "lint:prettier": "prettier --check .",
    "lint:typecheck": "tsc",
    "format": "run-s format:prettier format:eslint",
    "format:eslint": "pnpm lint:eslint --fix",
    "format:prettier": "pnpm lint:prettier --write",
    "ncu:dev": "ncu -u --dep dev",
    "ncu:prod": "ncu -u --dep prod"
  },
  "dependencies": {
    "next": "15.1.6",
    "next-sitemap": "4.2.3",
    "next-themes": "0.4.4",
    "nuqs": "2.1.1",
    "open-color": "git+https://github.com/y-temp4/open-color.git",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "tailwind-merge": "2.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.2.0",
    "@tsconfig/strictest": "2.0.5",
    "@types/node": "22.8.6",
    "@types/react": "19.0.8",
    "@types/react-dom": "19.0.3",
    "autoprefixer": "10.4.20",
    "concurrently": "9.0.1",
    "eslint": "9.14.0",
    "eslint-config-next": "15.0.2",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-tailwindcss": "3.17.5",
    "happy-css-modules": "3.1.1",
    "npm-check-updates": "17.1.9",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.47",
    "postcss-nesting": "13.0.1",
    "prettier": "3.4.2",
    "tailwindcss": "3.4.14",
    "typescript": "5.7.3",
    "typescript-eslint": "8.22.0"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
